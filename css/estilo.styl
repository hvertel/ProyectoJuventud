				a
					color gris_texto
					display inline-block
					font-weight bold
					height 25px
					margin 0 0.3em
					padding 0 0.2em	
					position relative
					text-decoration none
					text-align center		
			.submenu
				box-shadow 0 3px 2px rgba(0, 0, 0, .2)
				list-style none
				margin 0
				opacity 0
				padding 0
				position absolute
				visibility hidden
				width 100%
				width 250px
				&:after
					border-left 5px solid transparent
					border-bottom 5px solid #7C0CCA
					border-right 5px solid transparent
					content ""
					left 37px
					rigth 0
					position absolute
					top -10px
				.feria
					line-height 20px
					
				li
					float left
					width 250px
					line-height 40px
					height 40px
					&:hover
						background-color #C8BFE7
						
