	.logo 
		float left
		width 150px
		img
			width 130px
	.boton_menu
		display none
		
	.escudo 
		position absolute
		right 10px
		top 0
		
		.avatar
			margin 0 0.5em 0 0
			position relative
			z-index 2
			img 
				width 50px
				border-radius 50%	
p 
	padding-top 80px
	text-align justify			
				
footer
	color gris_texto
	padding 1em 0
	text-align center
	width 100%
	
		
	h3
		font-size 14px
		font-weight normal
		strong 
			display block
			
@media screen and (max-width: 910px)
	header
		nav 
			margin 0
		
		.escudo
			display none
		
		.logo
			display none
		
		.boton_menu
			display none
		
@media screen and (max-width: 658px)
	header
		nav
			background #023859
			height 100%
			left -100%
			margin 0
			position fixed
			width 90%
			overflow scroll
			outline 0
			color gris_texto
			.menu
				margin 0
				padding 0
				list-style none
				li 
					vertical-align middle
					display list-item
					border-bottom 1px solid rgba(255, 255, 255, .3)
					&:hover
						background 	white
						color gris_texto
						.submenu
							display block
							background #011826
							position relative
							width 150%
							z-index 1000
							&:hover
								display none
							li 
								display block
								overflow hidden
								border-bottom 1px solid rgba(255, 255, 255, .5)
								a
									margin-left 20px
								
						.submenu2
							display none
							background #011826
							position relative
							width 150%
							z-index 1000
							&:hover
								display none
							li 
								display block
								overflow hidden
								border-bottom 1px solid rgba(255, 255, 255, .5)
								a
									margin-left 20px
					.inicio:hover
						border-bottom 0
					.con:hover
						border-bottom 0
					.par:hover
						border-bottom 0
					.sed:hover
						border-bottom 0
					.his:hover
						border-bottom 0
					.contac:hover
						border-bottom 0
					a
						color white
						display block
						padding 20px
					.submenu
						width 100%
						position relative	
							a
								margin-left 20px
					.submenu2
						width 100%
						position relative
							a
								margin-left 20px	
		.boton_menu 
			display block
			width 80%
			background #ccc
			.boton
				display block
				padding 20px
				background #024959
				color #fff
				text-decoration none
				font-weight bold
				text-align right	
	.sombra
		position fixed
		top 50px
		left 70px
		margin 0
		img
			width 100%
			opacity 0.5
			background rgba(255, 255, 255, .75)
		
			
	
		