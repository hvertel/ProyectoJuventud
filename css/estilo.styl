gris_texto = #7A7A7A
gris_oscuro = #444

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?-rgkyoh');
	src:url('../fonts/icomoon.eot?#iefix-rgkyoh') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-rgkyoh') format('woff'),
		url('../fonts/icomoon.ttf?-rgkyoh') format('truetype'),
		url('../fonts/icomoon.svg?-rgkyoh#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body 
	font-family Century Gothic, CenturyGothic, AppleGothic, sans-serif
	font-size 16px
	
header
	background white
	box-shadow 0 2px 3px rgba(0, 0, 0, .3)
	color #4171A2	
	margin 0
	padding 0.5em 0.5em 0.8em 0.5em
	position fixed
	text-align center
	top 0
	width 100%
	
	nav
		background white
		margin-right 100px	
		.menu 
			height 30px
			list-style none
			padding 0
			margin 0					
			li
				display inline-block	
				position relative
				z-index 100
				&:hover
					.submenu
						opacity 1
						visibility visible
						background white
						z-index 100
						border-top 5px solid #7C0CCA
					.submenu2
						opacity 1
						visibility visible
						background white
						z-index 100
						border-top 5px solid #FF2442
													
				.inicio:hover
					border-bottom 5px solid #4171A2			
					color gris_texto
					font-weight bold
					text-decoration none
					position relative
					transition reverse ease 1s
					&:after
						animation-duration 1s
						amimation-name slidein
						border-left 5px solid transparent
						border-bottom 5px solid #4171A2
						border-right 5px solid transparent
						content ""
						left 17px
						rigth 0
						position absolute
						top 20px
